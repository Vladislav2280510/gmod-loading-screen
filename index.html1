<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <title>Metrostroi Server</title>
    <style>
        html, body {
            margin: 0;
            padding: 0;
            width: 100%;
            height: 100%;
            background: #0b0f14; /* тёмный фон, можно заменить на картинку */
            color: white;
            font-family: Arial, sans-serif;
            overflow: hidden;
        }

        .center {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            text-align: center;
        }

        h1 {
            font-size: 42px;
            color: #4fa3ff; /* синий заголовок */
            margin-bottom: 10px;
        }

        p {
            font-size: 18px;
            opacity: 0.8;
            color: #cce0ff; /* светлый текст */
        }

        .loader {
            margin: 30px auto;
            width: 80px;
            height: 80px;
            border: 6px solid #1e2a38;
            border-top: 6px solid #ffcc00; /* цвет крутилки */
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
    </style>
</head>
<body>

<div class="center">
    <h1>Metrostroi Server</h1>
    <p id="status">Загрузка…</p>
    <div class="loader"></div>
</div>

<script>
let texts = ["Загрузка карт…", "Загрузка поездов…", "Соединение с сервером…", "Подключение игроков…"];
let i = 0;
setInterval(() => {
    document.getElementById("status").innerText = texts[i];
    i = (i + 1) % texts.length;
}, 2000);
</script>

</body>
